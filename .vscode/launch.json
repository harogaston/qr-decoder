{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch file",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "args": [
        "${input:version}",
        "${input:errcorr}"
      ]
    },
    {
      "name": "Launch Package",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "args": [
        "${input:version}",
        "${input:errcorr}"
      ]
    }
  ],
  "inputs": [
    {
      "id": "version",
      "type": "promptString",
      "description": "QR Code version number",
      "default": "2"
    },
    {
      "id": "errcorr",
      "type": "promptString",
      "description": "Error correction level",
      "default": "L"
    }
  ]
}

